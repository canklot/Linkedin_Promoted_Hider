{
    "manifest_version": 3,
    "name": "Text Hide Extension",
    "version": "1.0",
    "description": "Hides HTML elements based on specific text",
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "main.js"
            ],
            "runat": "document_end"
        }
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ]
}