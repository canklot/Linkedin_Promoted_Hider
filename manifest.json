{
    "manifest_version": 3,
    "name": "Text Hide Extension",
    "version": "1.0",
    "description": "Hides HTML elements based on specific text",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "main.js"
            ],
            "runat": "document_end"
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}